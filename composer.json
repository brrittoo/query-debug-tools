{
    "name": "querylogger/debug-tools",
    "description": "Advanced Database Query Logging & Performance Monitor",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ataul-galib",
            "email": "ataul.gonigalib@gmail.com"
        }
    ],
    "keywords": [
        "laravel",
        "database",
        "query",
        "logging",
        "debugging",
        "performance"
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^9.0|^10.0",
        "illuminate/database": "^9.0|^10.0",
        "illuminate/http": "^9.0|^10.0",
        "illuminate/console": "^9.0|^10.0",
        "ext-json": "*",
        "nesbot/carbon": "^2.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0",
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "QueryLogger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "QueryLogger\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "QueryLogger\\Providers\\QueryLoggerServiceProvider"
            ],
            "aliases": {
                "QueryLogger": "QueryLogger\\Facades\\QueryLogger"
            }
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "test-coverage": [
            "vendor/bin/phpunit --coverage-html coverage"
        ],
        "lint": [
            "vendor/bin/php-cs-fixer fix --allow-risky=yes"
        ],
        "analyse": [
            "vendor/bin/phpstan analyse"
        ],
        "check": [
            "@lint",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "composer/package-versions-deprecated": true
        },
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}